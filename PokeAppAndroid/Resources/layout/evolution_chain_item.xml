<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:gravity="center"
	android:background="@android:color/white"
	xmlns:tools="http://schemas.android.com/tools"
    >
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="0"
		android:gravity="center_horizontal">
		<ImageView
		android:id="@+id/IvEvolvesFrom"
		android:contentDescription="From"
		android:layout_width="100dp"
		android:layout_height="100dp"/>
		<TextView
		android:id="@+id/TvEvolvesFrom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="17dp"
		tools:text="Pokemon From"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/IvArrow"
		android:contentDescription="@string/arrow"
		android:layout_width="30dp"
		android:layout_height="10dp"
		android:src="@drawable/bluearrow"
		android:layout_weight="1"/>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="vertical"
			android:gravity="center_horizontal">
		<ImageView
		android:id="@+id/IvEvolvesTo"
		android:contentDescription="To"
		android:layout_width="100dp"
		android:layout_height="100dp"
		/>
		<TextView
		android:id="@+id/TvEvolvesTo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textSize="17dp"
		tools:text="Pokemon To"/>
	</LinearLayout>
	

</LinearLayout>

