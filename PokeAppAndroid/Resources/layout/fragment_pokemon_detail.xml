<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bug">

    <TextView
        android:id="@+id/pokemonNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_margin="15dp"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

	<ImageView
		android:id="@+id/pokemonImageView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:src="@drawable/pikachu"
		android:contentDescription="@string/pikachuTitle"
        android:gravity="center_horizontal"
        android:layout_margin="15dp"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <Button
            android:id="@+id/informationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informationButton"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/evolutionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evolutionButton"
            android:layout_weight="1"/>

	</LinearLayout>

    <FrameLayout
    android:id="@+id/fragmentBaseDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"/>

</LinearLayout>
