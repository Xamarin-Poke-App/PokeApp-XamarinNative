<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:elevation="15dp"
    android:background="@color/fighting">

    <ImageView
		android:id="@+id/Pokeball"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:scaleType="centerInside"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/TvPokemonNumber"
		android:src="@drawable/pokeball"
		android:contentDescription="@string/pikachuImage"
        android:layout_marginTop="5dp"
      
        />
	<ImageView
		android:id="@+id/PokemonImage"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:scaleType="centerInside"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/TvPokemonNumber"
		tools:src="@drawable/pikachu"
		android:contentDescription="@string/pikachuImage"
        android:layout_marginTop="5dp"
        />

    
    <TextView
        android:id="@+id/tv_pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="15dp"
        android:paddingStart="8dp"
        android:textStyle="bold"
        tools:text="Pikachu"
        />

    <TextView
        android:id="@+id/TvPokemonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        tools:text="#001"
    />

</androidx.constraintlayout.widget.ConstraintLayout >  
